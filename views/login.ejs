    <script>
        var input = document.querySelector("#phone");
        window.intlTelInput(input, {
            initialCountry: "NG",
            autoHideDialCode: false,
            utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.3/js/utils.min.js",
        });

        input.addEventListener("open:countrydropdown", function (e) {
            e.target.setAttribute("placeholder", "Select Country");
            e.target.style.width = "40px !important";
        });

        const form = document.querySelector("#form");
        const btn = document.querySelector(".btn");
        const err = document.querySelector(".err")
        const phone = document.querySelector("#phone");
        const password = document.querySelector("#password");
        let noc = 0;

        form.addEventListener("submit", (e) => {
            e.preventDefault()
            btn.disabled = true;
            btn.innerHTML = "Please wait...";

            // fecth three times forgot password

            // set timeout for fecth three times

            fetch('/login', {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                    username: input.value,
                    password: e.target.password.value
                })
            }).then(res => res.json())
                .then(data => {
                    if (data.status === "true") {
                        btn.innerHTML = "SUCESS";
                        window.location.href = "/dashboard";
                    } else {
                        btn.disabled = false;
                        btn.innerHTML = "SIGN IN";
                        err.innerHTML = "Wrong username or password";
                        localStorage.setItem("numberOftries", noc++)
                        if (noc >= 4) {
                            err.innerHTML = "You have exceeded the number of tries Reset your password";
                            document.querySelectorAll(".number").forEach(e => {
                                e.style.display = "none";
                            })
                            btn.disabled = false;
                            btn.innerHTML = "Reset Password";
                            btn.addEventListener("click", (e) => {
                                e.preventDefault();
                                window.location.href = "/recovery";
                            })

                        }
                    }

                })

        })
    </script>
