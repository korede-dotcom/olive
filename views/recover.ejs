<body>
    <div class="container" style="height: 100vh; overflow: hidden;">
        <header style="height: 5vh;">
            <div class="logo">
                <a href="/dashboard">

                    <img src="/assest/OLIVE/logo.png" alt="">
                </a>
            </div>


        </header>

        <div class="user-details" style="height: 90vh;">
            <form action="" enctype="multipart/form-data" id="form">
                <p style="color: #ddd;text-transform: uppercase;text-align: center;">Password recovery</p>
                <span class="msg" style="color: goldenrod;">Please provide your name and email </span>
                <div>

                    <input type="text" name="name" id="name" placeholder="Enter your name" required>
                </div>
                <div>

                    <input type="email" name="email" id="email" placeholder="Enter your email" required>


                </div>



                <button class="btn" style="">get link</button>

            </form>
        </div>


        <div class="" style="background-color: #000;" style="margin-top: 7px;height: 7vh; ">
            <div class="footer_social" style="margin: 0px;padding-bottom: 15px;">
                <div>
                    <p><span style="color: #ddd;">&copy; 2021</span> GhenGhen </p>
                </div>
                <div class="social_icon">
                    <img src="/assest/OLIVE/fb.png" />
                    <img src="/assest/OLIVE/instagram.png" />
                    <img src="/assest/OLIVE/twitter.png" />
                </div>
            </div>

        </div>


        <!-- <script src="/js/app.js"></script>
    <script src="https://unpkg.com/swiper@7/swiper-bundle.min.js"></script> -->
        <script>
            //    form
            const form = document.querySelector('#form');
            const msg = document.querySelector('.msg');
            const btn = document.querySelector('.btn');
            form.addEventListener('submit', (e) => {
                e.preventDefault();
                btn.innerHTML = 'Please wait...';
                const name = document.querySelector('#name').value;
                const email = document.querySelector('#email').value;

                fetch('/recovery', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        name,
                        email
                    })
                }).then(res => res.json())
                    .then(data => {
                        console.log(data);
                        if (data.status == 'success') {
                            // hide inputs
                            document.querySelector('#name').style.display = 'none';
                            document.querySelector('#email').style.display = 'none';
                            msg.innerHTML = `Link to reset your password has been sent to your email`;
                            //    onclick btn to home
                            btn.innerHTML = 'Go to home';
                            btn.addEventListener('click', () => {
                                window.location.href = '/';
                            })
                        } else {
                            document.querySelector('#name').style.display = 'none';
                            document.querySelector('#email').style.display = 'none';
                            msg.innerHTML = `No user found`;
                            btn.innerHTML = 'Go Home'
                            btn.addEventListener('click', () => {
                                window.location.href = '/';
                            })
                        }
                    })
                    .catch(err => console.log(err));
            });
        </script>

