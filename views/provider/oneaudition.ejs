<%- include ("./partials/header.ejs") %>

    <section class="content">

        <div class="container-fluid">

            <div class="col-lg-10 col-md-10 col-sm-8 col-xs-12">
                <div class="card ">
                    <div class="header bg-orange">
                        <h2 class="">

                            <%= auditions.auditionName %>
                        </h2>
                        <ul class="header-dropdown m-b--5">

                            <li class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown"
                                    role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">more_vert</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="javascript:void(0);" class=" waves-effect waves-block">Edit</a></li>
                                    <li><a href="delete/<%= auditions._id %> " class=" waves-effect waves-block">Delete
                                        </a></li>

                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="body">

                        <div class="left">
                            <img style="border: 50%;" alt="img" src="<%= auditions.auditionLogo  %> " />
                        </div>
                        <h5>
                            <small>Description:</small>
                            <%= auditions.auditionDescription %>

                        </h5>
                        <hr>
                        <div class="row clearfix">
                            <div class="col-sm-6">
                                <b>Audition StartDate:</b>
                                <%=auditions.auditionStartDate %>

                            </div>
                            <div class="col-sm-6">
                                <b>Audition EndDate:</b>
                                <%= auditions.auditionEndDate %>
                            </div>
                            <!-- <div class="col-sm-6">
                                <b>Audition EndDate:</b>
                                <%= auditions.auditionPrice %>
                            </div> -->


                        </div>
                        <hr>
                        <div class="row clearfix">
                            <div class="col-sm-6">
                                <b>Audition Charges:</b>
                                <% if ( auditions.auditionCharges===0) { %>
                                    Free
                                    <% } %>
                                        <% if ( auditions.auditionCharges===1) { %>
                                            Payment
                                            <% } %>

                            </div>
                            <div class="col-sm-6">
                                <b>Audition Pattern:</b>
                                <% if ( auditions.auditionPattern==="0" ) { %>
                                    Upload
                                    <% } %>
                                        <% if ( auditions.auditionPattern==="1" ) { %>
                                            Record
                                            <% } %>
                            </div>
                        </div>
                        <hr>
                        <div class="row clearfix">

                            <div class="col-sm-6">
                                <b>Provider:</b>
                                <%= provider.username %>
                            </div>
                            <div class="col-sm-6">
                                <b>Provider Email:</b>
                                <%= provider.email %>
                            </div>
                        </div>
                        <hr>
                        <div class="row clearfix">

                            <div class="col-sm-12 col-lg-12">
                                <!-- <b>Audition Link:</b> -->
                                <% if (auditions.auditionLink) { %>
                                    <button style="background-color: none;" id="copyLink"
                                        data-auditionLink="<%=auditions.auditionLink%>">
                                        copy link
                                    </button>
                                    <pre>"<%=auditions.auditionLink%>"</pre>
                                    <% } %>
                                        <% if (!auditions.auditionLink) { %>
                                            No Link Provided
                                            <% } %>

                            </div>
                            <% if (!auditions.auditionLink) { %>
                                <div class="col-sm-6">
                                    <form id="getlink">
                                        <button class="getlinkBtn" type="submit"
                                            data-auditionId="<%=auditions._id%>">Generate Link</button>
                                    </form>
                                </div>
                                <% } %>


                        </div>
                    </div>
                </div>
    </section>

    <script>
        const copyLink = document.querySelector("#copyLink");
        console.log(copyLink)
        if (copyLink) {
            copyLink.addEventListener("click", (e) => {

                const copyLin = document.querySelector("#copyLink").getAttribute("data-auditionLink");
                console.log(copyLin)
                //  click and copy
                const el = document.createElement('textarea');
                el.value = copyLin;
                el.setAttribute('readonly', '');
                el.style.position = 'absolute';
                el.style.left = '-9999px';
                document.body.appendChild(el);
                el.select();
                document.execCommand('copy');
                document.body.removeChild(el);
                alert("Copied the text: " + copyLin);

                navigator.clipboard.writeText(copyLin).then(() => {
                    // alert("Link Copied");
                    copyLink.innerHTML = "Link Copied";
                })
            });

        }


        const getlink = document.querySelector("form");
        getlink.addEventListener("submit", (e) => {
            e.preventDefault();
            const getlinkBtn = getlink.querySelector(".getlinkBtn").getAttribute("data-auditionId");
            console.log(getlinkBtn)
            fetch("/provider/getlink", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({
                    auditionId: getlinkBtn
                })
            }).then(res => res.json()).then(data => {
                console.log(data);
                if (data.status === "true") {
                    alert("Link Generated");
                    window.location.reload();
                }
            })
        });
        // click and copy link

    </script>

    <%- include ("./partials/footer.ejs") %>